    <bean id="mongoConfig" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="order" value="1"/>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="location">
            <value>classpath:spring/mongo.properties</value>
        </property>
    </bean>

    <bean id="mongoClient" class="org.springframework.data.mongodb.core.MongoClientFactoryBean"/>

    <bean id="morphia" class="com.beautysight.liurushi.common.persistence.mongo.MorphiaFactoryBean">
        <property name="singleton" value="true"/>
        <property name="ignoreInvalidClasses" value="true"/>
        <property name="mapPackages">
            <list>
                <value>com.beautysight.liurushi.identityaccess.domain.model</value>
                <value>com.beautysight.liurushi.community.domain.model</value>
            </list>
        </property>
    </bean>

    <bean id="datastore" class="com.beautysight.liurushi.common.persistence.mongo.DataStoreFactoryBean">
        <property name="singleton" value="true"/>
        <property name="morphia" ref="morphia"/>
        <property name="mongo" ref="mongoClient"/>
        <property name="dbName" value="${db.name}"/>
    </bean>

</beans>